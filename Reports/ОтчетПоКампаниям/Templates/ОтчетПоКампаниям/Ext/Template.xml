		<dataSource>ИсточникДанных1</dataSource>
		<query>ВЫБРАТЬ
	КампанииОткрытие.Период КАК ДатаОткрытия,
	КампанииОткрытие.Кампания,
	КампанииОткрытие.Регистратор КАК ДокументОткрытия,
	КампанииОткрытие.Заказ,
	КампанииОткрытие.КоличествоПриход КАК КоличествоОткрытых
ПОМЕСТИТЬ Открытие
ИЗ
	РегистрНакопления.Кампании.Обороты(&amp;НачалоПериода, &amp;КонецПериода, Регистратор, ) КАК КампанииОткрытие
ГДЕ
	КампанииОткрытие.КоличествоПриход &gt; 0
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	КампанииЗакрытие.Период КАК ДатаЗакрытия,
	КампанииЗакрытие.Кампания,
	КампанииЗакрытие.Регистратор КАК ДокументЗакрытия,
	КампанииЗакрытие.Заказ,
	КампанииЗакрытие.КоличествоРасход КАК КоличествоЗакрытых
ПОМЕСТИТЬ Закрытие
ИЗ
	РегистрНакопления.Кампании.Обороты(&amp;НачалоПериода, &amp;КонецПериода, Регистратор, ) КАК КампанииЗакрытие
ГДЕ
	КампанииЗакрытие.КоличествоРасход &gt; 0
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Открытие.Кампания,
	Открытие.Заказ,
	Открытие.ДокументОткрытия,
	Открытие.ДатаОткрытия КАК ДатаОткрытия,
	Закрытие.ДатаЗакрытия КАК ДатаЗакрытия,
	Закрытие.ДокументЗакрытия,
	Открытие.КоличествоОткрытых,
	ЕСТЬNULL(Закрытие.КоличествоЗакрытых, 0) КАК КоличествоЗакрытых,
	ЕСТЬNULL(ДвижениеЗаказовОстатки.ТочкаРегистрации, ЗНАЧЕНИЕ(Справочник.ТочкиРегистрации.ПустаяСсылка)) КАК ТочкаРегистрации
ИЗ
	Открытие КАК Открытие
		ЛЕВОЕ СОЕДИНЕНИЕ Закрытие КАК Закрытие
		ПО (Закрытие.Кампания = Открытие.Кампания)
			И (Закрытие.Заказ = Открытие.Заказ)
		ЛЕВОЕ СОЕДИНЕНИЕ РегистрНакопления.ДвижениеЗаказов.Остатки КАК ДвижениеЗаказовОстатки
		ПО Открытие.Заказ = ДвижениеЗаказовОстатки.Заказ
			И (ДвижениеЗаказовОстатки.КоличествоОстаток &gt; 0)</query>
	</dataSet>
	<calculatedField>
		<dataPath>ЗаказовСОткрытойКампанией</dataPath>
		<expression>КоличествоОткрытых-КоличествоЗакрытых</expression>
		<title xsi:type="v8:LocalStringType">
			<v8:item>
				<v8:lang>ru</v8:lang>
