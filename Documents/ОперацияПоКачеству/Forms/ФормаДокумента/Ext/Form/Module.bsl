	ЭтоПроверка = Ложь;
	ЭтоРемонт = Ложь;
	ЭтоКонтроль = Ложь;
	
	Если Объект.ОперацияКачества = ПредопределенноеЗначение("Перечисление.ОперацииКачества.Проверка") Тогда
		ЭтоПроверка = Истина;
	ИначеЕсли Объект.ОперацияКачества = ПредопределенноеЗначение("Перечисление.ОперацииКачества.Контроль") Тогда
		ЭтоКонтроль = Истина;
	Иначе
		ЭтоРемонт = Истина;
	КонецЕсли; 
	
	Элементы.OK.Видимость = ЭтоПроверка Или ЭтоКонтроль;
